<ul>
  <% @tasks.each do |task| %>
    <% if !task.done %>
    <li class="task" id="task<%= task.id %>">
      <%= task.content %>
        <a data-task-id="<%= task.id %>" href="/tasks/mark_as_done/<%= task.id %>" class="done_link">
          Mark Done
        </a>
    </li>
    <% else %>
    <li class="task finished" id="task<%= task.id %>">
      <%= task.content %>
    </li>
    <% end %>
<% end %>
</ul>
